<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activitys.MainActivity_home">

    <FrameLayout
        android:id="@+id/fragment_home"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

    </FrameLayout>

    <RadioGroup
        android:id="@+id/radiogroup_home"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >

        <RadioButton
            android:id="@+id/radiobutton_recommend"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:button="@null"
            android:text="推荐"
            android:textColor="@drawable/textcolor"
            android:drawableTop="@drawable/radiobutton_recommend"
            />

        <RadioButton
            android:id="@+id/radiobutton_forum"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:button="@null"
            android:text="论坛"
            android:textColor="@drawable/textcolor"
            android:drawableTop="@drawable/radiobutton_forum"
            />

        <RadioButton
            android:id="@+id/radiobutton_car"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:button="@null"
            android:text="找车"
            android:textColor="@drawable/textcolor"
            android:drawableTop="@drawable/radiobutton_car"
            />

        <RadioButton
            android:id="@+id/radiobutton_discover"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:button="@null"
            android:text="发现"
            android:textColor="@drawable/textcolor"
            android:drawableTop="@drawable/radiobutton_discover"
            />

        <RadioButton
            android:id="@+id/radiobutton_user"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:button="@null"
            android:text="我"
            android:textColor="@drawable/textcolor"
            android:drawableTop="@drawable/radiobutton_user"
            />

    </RadioGroup>

</LinearLayout>
